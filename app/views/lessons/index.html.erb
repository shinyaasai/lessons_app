<div class="container">
  <div class="row mt-4">
    <div class="col-lg-6 col-md-12">
      <div class="search_form_wrapper">
        <div class="jumbotron">
          <div class="d-flex">
            <h2>教えよう</h2>
            <h2>教わろう</h2>
          </div>
          <div class="form-group">
            <%= form_tag lessons_path, method: "get" do %>
              <%= text_field_tag :search, params[:search], placeholder: "練習場で検索", class: "form-control" %>
              <div class="search_Box">
                <%= submit_tag "検索", practice_field: nil %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <% @lessons.each do |lesson| %>
      <div class="col-lg-4">
        <%= link_to lesson_path(lesson.id) do %>
          <div class="lessons_Box">
            <div class="user_image_Box">
             <%= image_tag "/images/unnamed.jpg", alt: "ユーザー画像"%>
            </div>
            <p><%= lesson.title %></p>
            <p><%= lesson.user.name %></p>
            <h5><%= lesson.practice_field %></h5>
          </div>
        </div> 
      <% end %>
    <% end %>
  </div>
</div>
